<!DOCTYPE html>
<html lang="en">

<head>
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-3373473075258546"
        crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Servers using Cosmofficial</title>
</head>

<body>
    <div class="row">
        <div class="btn-toolbar">
            <div class="btn-group">
                <a href="<%= authURL %>" class="btn btn-success"><%= buttonOneName %></a>
                <a href="https://discord.gg/BfFc8cfp3n" class="btn btn-info">Discord</a>
                <a href="https://discord.com/api/oauth2/authorize?client_id=845784381025157131&permissions=8&scope=bot" class="btn btn-primary">Invite Cosmofficial</a>
                <a href="https://www.patreon.com/Cosmofficial" class="btn btn-secondary">Patreon</a>
                <a class="btn btn-danger">Sign-Out</a>
            </div>
        </div>
    </div>
    <div class="container">
        <% servers.forEach(server => { %>
        <div class="card mt-4">
            <div class="card-body">
                <h4 class="card-title"><%= server.serverName %></h4>
                <div class="card-subtitle text-muted mb-2">
                    <%= `${server.players} Players Online` %>
                </div>
                <div class="row">
                    <div class="btn-toolbar">
                        <div class="btn-group">
                            <a href="<%= server.inviteLink %>" class="btn btn-success">Discord</a>
                            <a href="servers/<%= server.guildID %>" class="btn btn-primary">Select Server</a>
                            <a href="grids/<%= server.serverName %>" class="btn btn-primary">Grids</a>
                            <a href="players/<%= server.serverName %>" class="btn btn-primary">Players</a>
                            <a href="factions/<%= server.serverName %>" class="btn btn-primary">Factions</a>
                            <!-- <a href="factions/<%= server.serverName %>" class="btn btn-danger">Admin Area</a> -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</body>

</html>
