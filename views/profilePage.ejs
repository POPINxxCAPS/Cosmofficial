<!DOCTYPE html>
<html lang="en">

<%- include("./partials/_header") %>

<body>
    <div class="container">
        <div class="row">
            <div class="col offset-md-1">
                <div class="btn-toolbar">
                    <div class="btn-group">
                        <a href="https://cosmofficial.herokuapp.com/" class="btn btn-success">Home Page</a>
                        <a href="https://discord.gg/BfFc8cfp3n" class="btn btn-info">Cosmofficial Discord</a>
                        <a href="https://discord.com/api/oauth2/authorize?client_id=845784381025157131&permissions=8&scope=bot"
                            class="btn btn-primary">Bot Invite Link</a>
                        <a href="https://www.patreon.com/Cosmofficial" class="btn btn-secondary">Patreon</a>
                        <a href="./" class="btn btn-success">Your Servers</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <% guilds.forEach(guild => { %>
        <div class="card mt-4">
            <div class="card-body">
                <h4 class="card-title"><%= guild.userGuild._name %></h4>
                <div class="card-subtitle text-muted mb-2">
                    <%= `${guild.botGuild.members.cache.size} Members` %>
                </div>
                <div class="card-subtitle text-muted mb-2">
                    <%= `${guild.botGuild.channels.cache.size} Channels` %>
                </div>
                <div class="card-subtitle text-muted mb-2">
                    <%= `${guild.botGuild.roles.cache.size} Roles` %>
                </div>
                <div class="row">
                    <div class="btn-toolbar">
                        <div class="btn-group">
                            <a href="../servers/<%= guild.userGuild._id %>" class="btn btn-primary">Select Server</a>
                            <a href="../grids/<%= guild.userGuild._id %>" class="btn btn-primary">Grids</a>
                            <a href="../users/<%= guild.userGuild._id %>" class="btn btn-primary">Players</a>
                            <% if(guild.userGuild._permissions.includes("ADMINISTRATOR")) { %>
                            <a href="../admin/<%= guild.userGuild._id %>" class="btn btn-danger">Admin Configuration</a>
                            <!-- <a href="factions/<%= guild.guildName %>" class="btn btn-danger">Admin Area</a> -->
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</body>
<%- include("./partials/_footer") %>

</html>