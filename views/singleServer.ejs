<!DOCTYPE html>
<html lang="en">

<%- include("./partials/_header") %>


<body class="bg-dark">
    <%- include("./partials/_mainNavBar", { reqObj: reqObj }) %>
    <div class="container">
        <div class="row">
            <h1 class="card-header bg-dark bg-gradient text-white font-weight-bold"><%= reqObj.server.serverName %></h1>
            <div class="card-body" style="background: #1f1f1f">
                <h4 class="card-title text-white"><%= `${reqObj.server.players} Player(s) Online` %></h4>
                <div class="card-subtitle text-white mb-2">
                    <%= `${reqObj.stations + reqObj.ships} Total Grids` %>
                </div>
                <div class="card-subtitle text-white mb-2">
                    <%= `${reqObj.stations} Stations` %>
                </div>
                <div class="card-subtitle text-white mb-2">
                    <%= `${reqObj.ships} Ships` %>
                </div>
                <div class="card-subtitle text-white mb-2">
                    <%= `${reqObj.NPCs} NPCs Active` %>
                </div>
                <div class="card-subtitle text-white mb-2">
                    <%= `${reqObj.server.usedPCU} Used PCU` %>
                </div>
                <div class="card-subtitle text-white mb-2">
                    <%= `${reqObj.server.simSpeed} Sim Speed` %>
                </div>
                <div class="card-subtitle text-white mb-2">
                    <%= `${reqObj.server.simCPULoad}% Sim CPU Load` %>
                </div>
                <div class="card-subtitle text-white mb-2">
                    <%= `Game Version: ${reqObj.server.version}` %>
                </div>
                <div class="card-subtitle text-white mb-2">
                    Last Updated: <%= `${new Date(parseInt(reqObj.server.lastUpdated)).toString()}` %>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="btn-toolbar">
                <div class="btn-group">
                    <a href="../grids/<%= reqObj.server.guildID %>" class="btn btn-primary">Grids</a>
                    <a href="../users/<%= reqObj.server.guildID %>" class="btn btn-primary">Players</a>
                    <a href="../factions/<%= reqObj.server.guildID %>" class="btn btn-primary">Factions</a>
                </div>
            </div>
        </div>
    </div>
</body>

<%- include("./partials/_footer") %>

</html>