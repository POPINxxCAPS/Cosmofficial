<!DOCTYPE html>
<html lang="en">

<%- include("./partials/_header") %>


<body>
    <div class="container">
        <div class="row">
            <div class="col offset-md-1">
                <div class="btn-toolbar">
                    <div class="btn-group">
                        <a href="https://cosmofficial.herokuapp.com/" class="btn btn-success">Home Page</a>
                        <a href="https://discord.gg/BfFc8cfp3n" class="btn btn-info">Cosmofficial Discord</a>
                        <a href="https://discord.com/api/oauth2/authorize?client_id=845784381025157131&permissions=8&scope=bot"
                            class="btn btn-primary">Bot Invite Link</a>
                        <a href="https://www.patreon.com/Cosmofficial" class="btn btn-secondary">Patreon</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="card-body">
            <h4 class="card-title"><%= server.serverName %></h4>
            <div class="card-subtitle text-muted mb-2">
                <%= `World Name: ${server.worldName}` %>
            </div>
            <div class="card-subtitle text-muted mb-2">
                <%= `${server.players} Players Online` %>
            </div>
            <div class="card-subtitle text-muted mb-2">
                <%= `${stations + ships} Total Grids` %>
            </div>
            <div class="card-subtitle text-muted mb-2">
                <%= `${stations} Stations` %>
            </div>
            <div class="card-subtitle text-muted mb-2">
                <%= `${ships} Ships` %>
            </div>
            <div class="card-subtitle text-muted mb-2">
                <%= `${NPCs} NPCs Active` %>
            </div>
            <div class="card-subtitle text-muted mb-2">
                <%= `${server.usedPCU} Used PCU` %>
            </div>
            <div class="card-subtitle text-muted mb-2">
                <%= `${server.simSpeed} Sim Speed` %>
            </div>
            <div class="card-subtitle text-muted mb-2">
                <%= `${server.simCPULoad}% Sim CPU Load` %>
            </div>
            <div class="card-subtitle text-muted mb-2">
                <%= `Game Version: ${server.version}` %>
            </div>
            <div class="card-subtitle text-muted mb-2">
                <%= `${new Date(parseInt(server.lastUpdated)).toString()}` %>
            </div>
        </div>
        <div class="row">
            <div class="btn-toolbar">
                <div class="btn-group">
                    <a href="../grids/<%= server.guildID %>" class="btn btn-primary">Grids</a>
                    <a href="../users/<%= server.guildID %>" class="btn btn-primary">Players</a>
                    <a href="../factions/<%= server.guildID %>" class="btn btn-primary">Factions</a>
                    <!-- <a href="factions/<%= server.serverName %>" class="btn btn-danger">Admin Area</a> -->
                </div>
            </div>
        </div>
    </div>
</body>

<%- include("./partials/_footer") %>

</html>